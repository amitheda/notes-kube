{
  "apiVersion": "v1",
  "kind": "ReplicationController",
  "metadata": {
    "name": "mysql-controller"
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "name": "mysql"
    },
    "template": {
      "metadata": {
        "labels": {
          "name": "mysql"
        }
      },
      "spec": {
        "restartPolicy": "Always",
        "containers": [
          {
            "name": "notes-mysql",
            "image": "mysql",
            "ports": [
              {
                "containerPort": 3306
              }
            ],
            "env": [
              {
                "name": "MYSQL_ROOT_PASSWORD",
                "value": "root"
              }
            ],
            "volumeMounts": [
              {
                "name": "www-data",
                "mountPath": "/var/lib/mysql"
              }
            ]
          }
        ],
        "volumes": [
          {
            "name": "www-data",
            "hostPath": {
              "path": "/home/docker/mysql/"
            }
          }
        ]
      }
    }
  }
}